/*index.wxss*/

/* 全局样式 */
page {
  background-color:rgb(255, 255, 255);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

/* 页面滚动容器 */
.page-scroll {
  height: 100vh;
  background-color: rgb(255, 255, 255);
  min-height: 100vh;
}

/* 容器样式 */
.container {
  min-height: 100vh;
  background-color: rgb(255, 255, 255);
  max-width: 750rpx;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  top: 0rpx;
  padding-bottom: 120rpx;
}

/* 状态栏 */
.status-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  background-color:rgb(255, 255, 255);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.time {
  color: #000000;
  font-weight: 500;
  font-size: 28rpx;
}

.status-icons {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.signal-icon,
.wifi-icon,
.battery-icon {
  width: 32rpx;
  height: 32rpx;
  background-color: #000000;
  border-radius: 4rpx;
}

/* 导航栏 */
.nav-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  background-color: rgb(255, 255, 255);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  width: 100%;
  max-width: 750rpx;
  box-sizing: border-box;
}

.nav-left {
  display: flex;
  align-items: center;
}

.logo-container {
  position: relative;
  display: inline-block;
}

.logo-text {
  font-size: 40rpx;
  font-style: italic;
  font-weight: 800;
  color: #000000;
  transform: scale(0.8);
  transform-origin: left;
  display: inline-block;
  margin: 4rpx;
  padding: 4rpx;
}

.logo-underline {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 8rpx;
  background-color: #facc15;
}

.brand-text {
  font-size: 60rpx;
  font-weight: 900;
  font-style: italic;
  color: #000000;
  margin-left: 8rpx;
}

.search-btn {
  width: 80rpx;
  height: 80rpx;
  background-color: #facc15;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: background-color 0.2s;
}

.search-btn:active {
  background-color: #000000;
}

.search-icon {
  font-size: 40rpx;
  color: #ffffff;
}

/* 主要内容区域 */
.main-content {
  padding: 32rpx;
  width: 100%;
  max-width: 750rpx;
  box-sizing: border-box;
  min-height: 600rpx;
}

/* 章节样式 */
.section {
  margin-bottom: 24rpx;
  width: 100%;
  border-radius: 16rpx;
  padding: 8rpx;
  box-sizing: border-box;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  padding: 8rpx;
  border-radius: 8rpx;
  box-sizing: border-box;
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2937;
  display: block;
  padding: 8rpx 16rpx;
  border-radius: 4rpx;
}

.more-btn {
  display: flex;
  align-items: center;
  color: #facc15;
  font-weight: 500;
  font-size: 28rpx;
  padding: 8rpx 16rpx;
}

.arrow {
  margin-left: 8rpx;
  font-size: 24rpx;
  display: inline-block;
}

.add-btn {
  width: 80rpx;
  height: 80rpx;
  background-color: #facc15;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: background-color 0.2s;
}

.add-btn:active {
  background-color: #000000;
}

.add-icon {
  font-size: 48rpx;
  color: #ffffff;
  font-weight: bold;
}

/* 灵感专题 */
.topic-scroll {
  white-space: nowrap;
  padding: 0 10rpx;
  margin: 0 -10rpx;
  -webkit-overflow-scrolling: touch;
  scroll-behavior: smooth;
  min-height: 460rpx;
  width: 100%;
  box-sizing: border-box;
  height: 460rpx;
  overflow-x: auto;
  overflow-y: hidden;
  display: flex;
  align-items: flex-start;
}

.topic-item {
  display: inline-block;
  width: 460rpx;
  margin-right: 32rpx;
  background-color: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
  flex-shrink: 0;
  width: 460rpx;
  min-height: 500rpx;
  position: relative;
  z-index: 10;
}

.topic-item:active {
  transform: scale(0.98);
}

.topic-image {
  width: 100%;
  height: 310rpx;
  display: block;
}

.embassy-bg {
    background-image: url('/images/8697ecc0-3128-45f6-a9a1-ee57a5fc0e31.png');
    background-size: cover;
    background-position: center;
}

.hutong-bg {
  background-image: url('/images/8697ecc0-3128-45f6-a9a1-ee57a5fc0e31.png');
  background-size: cover;
  background-position: center;
}

.museum-bg {
  background-image: url('/images/8697ecc0-3128-45f6-a9a1-ee57a5fc0e31.png');
  background-size: cover;
  background-position: center;
}

.food-bg {
  background-image: url('/images/8697ecc0-3128-45f6-a9a1-ee57a5fc0e31.png');
  background-size: cover;
  background-position: center;
}

.shanghai-bg {
  background-image: url('/images/8697ecc0-3128-45f6-a9a1-ee57a5fc0e31.png');
  background-size: cover;
  background-position: center;
}

.panda-bg {
  background-image: url('/images/8697ecc0-3128-45f6-a9a1-ee57a5fc0e31.png');
  background-size: cover;
  background-position: center;
}

.topic-content {
  padding: 20rpx;
  background-color: #ffe100;
  height: 120rpx;
  display: flex;
  flex-direction: column;
  /* 改为flex-start，让内容紧凑排列 */
  justify-content: flex-start;
  border-bottom-left-radius: 24rpx;
  border-bottom-right-radius: 24rpx;
}

.topic-title {
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 0;
  color: #000000;
  display: block;
  line-height: 1.2;
  /* 确保标题不会占用太多空间 */
  flex-shrink: 0;
}

.topic-btn {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  font-weight: 300;
  color: #020617;
  padding: 4rpx 0;
  /* 让按钮占据剩余空间 */
  margin-top: auto;
  flex-shrink: 0;
}

/* 我的行程 */
.trip-list {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
  width: 100%;
  align-items: center;
}

.trip-item {
  background-color: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
  margin-bottom: 32rpx;
  width: 670rpx;
  box-sizing: border-box;
}

.trip-image-container {
  position: relative;
}

.trip-image {
  width: 100%;
  height: 384rpx;
}

.trip-duration {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  background-color: #020617;
  color: #ffffff;
  padding: 8rpx 16rpx;
  border-radius: 50rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.trip-info {
  padding: 32rpx;
}

.trip-title {
  font-size: 36rpx;
  font-weight: 500;
  margin-bottom: 16rpx;
  color: #000000;
  display: block;
}

.trip-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.detail-btn {
  background-color: #020617;
  color: #ffffff;
  padding: 16rpx 32rpx;
  border-radius: 32rpx;
  font-size: 26rpx;
  font-weight: 300;
  transition: background-color 0.2s;
}

.detail-btn:active {
  background-color: #facc15;
}

.action-buttons {
  display: flex;
  gap: 16rpx;
  width:150rpx;
  margin: 26rpx 20rpx 26rpx 20rpx;
  padding: 0 20rpx;
}

.action-btn {
  color: #6b7280;
  font-size: 20rpx;
  transition: color 0.2s;
}

.action-btn:active {
  color: #facc15;
}

/* 分享按钮特殊样式 */
.share-btn {
  background: none !important;
  border: none !important;
  padding: 0 !important;
  margin: 0 !important;
  line-height: 1;
  color: #6b7280;
  font-size: 20rpx;
  transition: color 0.2s;
  display: inline-block;
  min-height: auto;
  height: auto;
  width: 40rpx;
  cursor: pointer;
}

.share-btn:active {
  color: #facc15;
  background: none !important;
  transform: none !important;
  box-shadow: none !important;
    max-width: 60rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}

.share-btn::after {
  border: none !important;
  box-shadow: none !important;
}

/* 分享按钮容器样式 */
button[open-type="share"] {
  background: none !important;
  border: none !important;
  padding: 0 !important;
  margin: 0 !important;
  line-height: 1;
  min-height: auto;
  height: auto;
  width: auto;
  display: inline-block;
  font-size: inherit;
  color: inherit;
}

button[open-type="share"]:active {
  background: none !important;
  transform: none !important;
  box-shadow: none !important;
  opacity: 1 !important;
}

button[open-type="share"]::after {
  border: none !important;
  box-shadow: none !important;
}

/* 确保按钮内部文字样式正确 */
button[open-type="share"] .action-btn {
  background: none !important;
  border: none !important;
  padding: 0 !important;
  margin: 0 !important;
  color: #6b7280;
  font-size: 20rpx;
  transition: color 0.2s;
}

button[open-type="share"]:active .action-btn {
  color: #facc15;
}

/* 底部导航栏 */
.bottom-nav {
  position: fixed;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color:rgb(255, 255, 255);
  border-top: 1rpx solid #e5e7eb;
  padding: 8rpx 0;
  z-index: 1000;
  background-color:rgb(255, 255, 255);
  border-top: 2rpx solid #e5e7eb;
  width: 100%;
  max-width: 750rpx;
  box-sizing: border-box;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx;
}

.nav-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  transition: transform 0.2s;
}

.nav-image-center {
  width: 160rpx;
  height: 160rpx;
  border-radius: 32rpx;
  transition: transform 0.2s;
  margin-top: -60rpx;
}

.nav-item:active .nav-image,
.nav-item:active .nav-image-center {
  transform: scale(0.95);
}

/* 悬浮框样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(10rpx);
  z-index: 2000;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
}

.modal-card {
  width: 100%;
  max-width: 600rpx;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 200rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
}

.white-card {
  background-color: #ffffff;
}

.black-card {
  background-color: #000000;
}

.card-content {
  flex: 1;
}

.card-title {
  font-size: 50rpx;
  font-weight: 700;
  margin-bottom: 12rpx;
  line-height: 1.2;
}

.white-card .card-title {
  color: #000000;
}

.black-card .card-title {
  color: #ffffff;
}

.card-subtitle {
  font-size: 33rpx;
  color: #6b7280;
  line-height: 1.4;
}

.card-button {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 32rpx;
}

.white-card .card-button {
  background-color: #facc15;
}

.black-card .card-button {
  background-color: #ffffff;
}

.plus-icon {
  font-size: 48rpx;
  color: #ffffff;
  font-weight: bold;
}

.edit-icon {
  font-size: 32rpx;
  color: #000000;
}

.close-button {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #374151;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.3);
}

.close-icon {
  font-size: 48rpx;
  color: #ffffff;
  font-weight: bold;
}

