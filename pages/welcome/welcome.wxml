<view class="welcome-container">
  <!-- 背景图片 -->

  
  <!-- 内容区域 -->
  <view class="content">
    <!-- 顶部GIF图片区域 -->
    <view class="top-gif-container">
      <image class="gif-image" src="https://p0.meituan.net/hackathonqjj/6ff6fb2db0703ba735cde1d887d76592801464.gif" mode="aspectFit"></image>
    </view>
    
    <!-- 手机号显示区域 -->
    <view class="phone-display" wx:if="{{isPhoneLogin}}">
      <text class="phone-text">{{phoneNumber}}</text>
    </view>
    

    <!-- 微信头像选择登录按钮 -->
    <button 
      class="main-login-btn" 
      open-type="chooseAvatar"
      bindchooseavatar="onChooseAvatar">
      <image class="login-btn-image" src="https://p0.meituan.net/hackathonqjj/3c6007c411070433ad242db329bd07519515.png" mode="scaleToFill"></image>
    </button>
    
    
    <!-- 底部登录选项 -->
    <view class="login-options">
      <view class="option-item" bindtap="onAiwanLogin">
        <image class="option-image" src="https://p0.meituan.net/hackathonqjj/0ec13a2a63f03daac48863d1fa57995f6194.png" mode="aspectFit"></image>
      </view>
      
      <view class="option-item" bindtap="onWechatLogin">
        <image class="option-image" src="https://p0.meituan.net/hackathonqjj/422145c79604eb28661febe128c76ba15722.png" mode="aspectFit"></image>
      </view>
      
      <view class="option-item" bindtap="onPhoneLogin">
        <image class="option-image" src="https://p0.meituan.net/hackathonqjj/36fc38fcf8a635ec446f723967d580f15607.png" mode="aspectFit"></image>
      </view>
      
      <view class="option-item" bindtap="onOtherLogin">
        <image class="option-image" src="https://p0.meituan.net/hackathonqjj/9afd15d554ea525ce800ad07d2f25b724612.png" mode="aspectFit"></image>
      </view>
      
      <view class="option-item" bindtap="onAppleLogin">
        <image class="option-image" src="https://p0.meituan.net/hackathonqjj/dc593175365cae1a45ed584cb833b7314763.png" mode="aspectFit"></image>
      </view>
    </view>
    
    <!-- 底部协议区域 -->
    <view class="agreement">
      <view class="agreement-checkbox {{agreed ? 'checked' : ''}}" bindtap="onAgreementToggle">
        <text class="checkbox-icon">{{agreed ? '✓' : ''}}</text>
      </view>
      <text class="agreement-text">
        我已阅读并同意<text class="link-text" bindtap="onPrivacyPolicy">隐私政策</text>和<text class="link-text" bindtap="onUserAgreement">用户协议</text>
      </text>
    </view>
  </view>
</view> 