.companion-question text {
  font-size: 48rpx;
  font-weight: 700;
  color: #000000;
  line-height: 1.2;
}

.companion-input-container {
  background-color: #ffffff;
  border-radius: 32rpx;
  padding: 24rpx 32rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  margin: 0 32rpx;
}

.companion-icon {
  width: 60rpx;
  height: 60rpx;
  background-color: #000000;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  font-size: 28rpx;
  color: #ffffff;
}

.companion-input {
  flex: 1;
  font-size: 32rpx;
  color: #000000;
  background-color: transparent;
  border: none;
  outline: none;
}

.companion-input::placeholder {
  color: #9ca3af;
}

/* 灵活天数确认显示 */
.flexible-duration-display {
  background: linear-gradient(135deg, #fef3c7, #fde68a);
  border: 2rpx solid #fbbf24;
  border-radius: 50rpx;
  padding: 32rpx;
  margin: 32rpx 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(250, 204, 21, 0.1);
}

.flexible-duration-info {
  flex: 1;
}

.flexible-duration-label {
  font-size: 26rpx;
  color: #92400e;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.flexible-duration-value {
  font-size: 32rpx;
  color: #000000;
  font-weight: 700;
  line-height: 1.4;
}

/* 分享好友区域 */
.share-section {
  margin-bottom: 64rpx;
  animation: fadeInUp 0.5s ease-out;
}

.share-title {
  margin-bottom: 32rpx;
  text-align: center;
}

.share-title text {
  font-size: 36rpx;
  font-weight: 600;
  color: #000000;
  line-height: 1.3;
}

.share-avatars {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 48rpx;
  position: relative;
}

.current-user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 3rpx solid #ffffff;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 2;
}

.companion-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 3rpx solid #ffffff;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 1;
  margin-left: -20rpx;
}

.avatar-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.avatar-placeholder {
  width: 100%;
  height: 100%;
  background-color: #f3f4f6;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #9ca3af;
}

.add-friends {
  display: flex;
  align-items: center;
  gap: 16rpx;
  position: relative;
  left: -20rpx;
  z-index: 1;
}

.add-icon {
  width: 80rpx;
  height: 80rpx;
  background-color: #ffffff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #6b7280;
  font-weight: 600;
}

.add-text {
  font-size: 28rpx;
  color: #6b7280;
  font-weight: 500;
}

.share-buttons {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
  position: relative;
  width: 100%;
  left: 0;
  right: 0;
}

.share-wechat-btn {
  background-color: #000000;
  width: calc(100vw - 64rpx) !important;
  max-width: calc(100vw - 64rpx) !important;
  color: #ffffff;
  border: none;
  border-radius: 32rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.share-wechat-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.share-icon {
  font-size: 28rpx;
}

.share-text {
  font-size: 32rpx;
}

.do-myself-btn {
  background-color: #ffffff;
  color: #000000;
  border: 2rpx solid #000000;
  border-radius: 32rpx;
  padding: 32rpx;
  width: calc(100vw - 64rpx) !important;
  max-width: calc(100vw - 64rpx) !important;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.do-myself-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.12);
}

.do-myself-text {
  font-size: 32rpx;
}