page {
    height: 100%;
  }
  
  .page {
    height: 100%;
    background: linear-gradient(180deg, #FFF9C4 0%, #FFFFFF 100%);
  }
  
  .container {
    height: 100%;
    display: flex;
    flex-direction: column;
    padding-bottom: 120rpx; /* 为底部导航栏留出空间 */
  }
  
  /* 顶部导航栏 */
  .top-nav {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: transparent;
  }
  
  /* 返回按钮样式 */
  .back-btn {
    position: absolute;
    left: -340rpx;
    bottom:30rpx;
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1001;
  }
  
  .back-arrow {
    font-size: 40rpx;
    color: #000000;
    font-weight: bold;
  }
  
  
  .header {
    padding: 32rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: transparent;
  }
  
  .user-info {
    display: flex;
    align-items: center;
    flex: 1;
  }
  
  .avatar {
    width: 15vw; /* 适配屏幕宽度 */
    height: 15vw;
    min-width: 120rpx;
    max-width: 200rpx;
    border-radius: 50%;
    margin-right: 20rpx;
    border: 4rpx solid #FFE347;
    box-shadow: 0 4rpx 16rpx rgba(255, 227, 71, 0.3);
  }
  
  .info {
    flex: 1;
  }
  
  .info .name {
    font-size: 36rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 16rpx;
  }
  
  .info .tag {
    font-size: 28rpx;
    color: #666;
    display: flex;
    align-items: center;
    margin-bottom: 12rpx;
  }
  
  .info .user-id {
    font-size: 24rpx;
    color: #999;
    font-family: monospace;
  }
  
  .setting {
    padding: 16rpx;
  }
  
  .setting-icon {
    font-size: 48rpx;
    color: #666;
  }
  
  .banner {
    margin: 20rpx 32rpx;
    background-color: #FFE347;
    border-radius: 32rpx;
    padding: 32rpx;
    box-shadow: 0 8rpx 32rpx rgba(255, 227, 71, 0.3);
  }
  
  .banner-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
  }
  
  .banner-left {
    flex: 1;
    margin-right: 20rpx;
  }
  
  .banner-title {
    font-size: 64rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 16rpx;
  }
  
  .banner-subtitle {
    font-size: 28rpx;
    color: #666;
    line-height: 1.4;
  }
  
  .create-btn {
    background-color: #333;
    color: #fff;
    font-size: 28rpx;
    padding: 20rpx 40rpx;
    border-radius: 60rpx;
    border: none;
    line-height: 1;
    white-space: nowrap;
    min-width: 120rpx;
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
  }
  
     .nav-tabs {
    background-color: #fff;
    padding: 24rpx 0;
    margin: 0 32rpx;
    border-radius: 24rpx;
    backdrop-filter: blur(10rpx);
  }
  
  
      .main-tabs {
      display: flex;
      padding: 0 32rpx;
      margin-bottom: 40rpx;
      }
  
      .main-tabs .tab {
      margin-right: 80rpx;
      font-size: 32rpx;
      color: #666;
      padding: 20rpx 0;
      position: relative;
      }
  
      .main-tabs .tab.active {
      color: #333;
      font-weight: bold;
      }
  
      .main-tabs .tab.active::after {
      content: '';
      position: absolute;
      bottom: -20rpx;
      left: 0;
      width: 100%;
      height: 12rpx;
      background-color: #FFE347;
      border-radius: 6rpx;
      }
  
      .year-tabs {
          display: flex;
          overflow-x: auto;
          padding: 0 24rpx;
          gap: 24rpx;
          height: 96rpx;
          -webkit-overflow-scrolling: touch;
          background-color: #fff;
          white-space: nowrap;  /* 防止子元素换行 */
        }
        
        /* 增加年份选项间距 */
        .year-tabs{
          display:block;
          white-space:nowrap;      /* 关键：一行显示 */
          overflow-x:auto;
          -webkit-overflow-scrolling:touch;
          padding: 0 24rpx;
          height:96rpx;
        }
        
        .year-tab{
          display:inline-block;    /* 关键：不要是块级 */
          /* 确保没有 width:100% 等全宽样式 */
          padding:16rpx 40rpx;
          margin-right:24rpx;
          font-size:28rpx;
          color:#666;
          background:#f5f5f5;
          border-radius:60rpx;
        }
        .year-tab.active{
          background:#FFE347;
          color:#333;
          font-weight:600;
        }
        
        
        
  
      .content {
      flex: 1;
      overflow: auto;
      padding: 16rpx;
      }
  
      .trip-list {
      display: flex;
      flex-wrap: wrap;  /* 允许子元素换行 */
      gap: 32rpx;  /* 子元素之间的间隔 */
       justify-content: space-between;  /* 确保子元素均匀分布 */
       padding: 16rpx;  /* 在列表两边添加间距 */
      }
  
      .trip-card {
          background-color: rgba(255, 255, 255, 0.9);
          border-radius: 32rpx;
          overflow: hidden;
          box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
          backdrop-filter: blur(10rpx);
          width: 48%;  /* 调整卡片宽度 */
          margin-bottom: 32rpx;  /* 为卡片底部添加间距 */
        }
        
  
      .trip-image {
      width: 100%;
      height: 400rpx;
      object-fit: cover;
      }
  
      .trip-info {
      padding: 24rpx;
      }
  
      .trip-title {
      font-size: 32rpx;
      color: #333;
      margin-bottom: 22rpx;
      font-weight: 500;
      line-height: 1.4;
      }
  
      .trip-date {
      display: flex;
      align-items: center;
      flex-wrap: nowrap;
      justify-content: space-between;  /* 让天数和日期分开 */
      width: 100%;  /* 确保占满整行 */
      }
  
      .days {
      background-color: #FFE347;
      padding: 8rpx 24rpx;
      border-radius: 40rpx;
      font-size: 24rpx;
      color: #333;
      font-weight: 500;
      margin-bottom: 8rpx;
      }
  
      .date {
      font-size: 24rpx;
      color: #999;
      margin-bottom: 8rpx;
      }
  
  /* 底部导航栏样式 - 与首页保持一致 */
  .bottom-nav {
    position: fixed;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    justify-content: space-around;
    align-items: center;
    background-color: #ffffff;
    border-top: 1rpx solid #e5e7eb;
    padding: 8rpx 0;
    z-index: 1000;
    background-color: #f0f0f0;
    border-top: 2rpx solid #d0d0d0;
    width: 100%;
    max-width: 750rpx;
    box-sizing: border-box;
  }
  
  .nav-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 16rpx;
  }
  
  .nav-image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 16rpx;
    transition: transform 0.2s;
  }
  
  .nav-image-center {
    width: 160rpx;
    height: 160rpx;
    border-radius: 32rpx;
    transition: transform 0.2s;
    margin-top: -60rpx;
  }
  
  .nav-item:active .nav-image,
  .nav-item:active .nav-image-center {
    transform: scale(0.95);
  }
  
  /* 空状态样式 */
  .empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 120rpx 40rpx;
    text-align: center;
  }
  
  .empty-image {
    width: 400rpx;
    height: 300rpx;
    margin-bottom: 40rpx;
    border-radius: 24rpx;
  }
  
  .empty-text {
    font-size: 32rpx;
    color: #999;
    font-weight: 500;
  }
  
