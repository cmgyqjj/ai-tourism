/* trip-plans.wxss */
.container {
  background-color: #ffffff;
  height: 100vh;
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 顶部导航栏 */
.header-nav {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background-color: #ffffff;
  z-index: 1000;
  padding-top: 120rpx;
  padding-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 返回按钮样式 */
.back-btn {
  position: absolute;
  top: 100rpx;
  left: 40rpx;
  width: 80rpx;
  height: 80rpx;
  background-color: #ffffff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  z-index: 1001;
}

.back-arrow {
  font-size: 40rpx;
  color: #000000;
  font-weight: bold;
}

/* 页面标题样式 */
.page-title {
  display: flex;
  align-items: center;
  justify-content: center;
}

.title-text {
  font-size: 40rpx;
  font-weight: 600;
  color: #000000;
}

/* 滚动容器样式 */
.scroll-container {
  flex: 1;
  margin-top: 180rpx;
  height: calc(100vh - 180rpx);
  overflow-y: auto;
}

/* 内容容器 */
.content-container {
  padding: 20rpx 40rpx 40rpx 40rpx;
  box-sizing: border-box;
  width: 100%;
}

/* 章节样式 */
.section {
  margin-bottom: 24rpx;
  width: 100%;
  border-radius: 16rpx;
  padding: 8rpx;
  box-sizing: border-box;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  padding: 8rpx;
  border-radius: 8rpx;
  box-sizing: border-box;
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2937;
  display: block;
  padding: 8rpx 16rpx;
  border-radius: 4rpx;
}

/* 我的行程 */
.trip-list {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
  width: 100%;
  align-items: center;
}

.trip-item {
  background-color: rgb(255, 251, 210);
  border: 2rpx solid #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 32rpx;
  width: 670rpx;
  height: 300rpx;
  box-sizing: border-box;
  display: flex;
  padding: 30rpx;
  gap: 30rpx;
  align-items: center;
}

.trip-left {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.trip-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.trip-title {
  font-size: 38rpx;
  font-weight: 600;
  color: #000000;
  display: block;
  line-height: 1.2;
}

.trip-status {
  font-size: 20rpx;
  color: #000000;
  margin-left: 8rpx;
  white-space: nowrap;
}

.trip-details {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.trip-info-row {
  display: flex;
  gap: 20rpx;
}

.info-item {
  display: flex;
  align-items: center;
}

.info-label {
  font-size: 24rpx;
  color: #666666;
  line-height: 1.4;
}

.participants {
  display: flex;
  align-items: center;
}

.participant-avatars {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.participant-avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  border: 2rpx solid #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.trip-right {
  flex-shrink: 0;
}

.trip-scenery {
  width: 267rpx;
  height: 200rpx;
  border-radius: 16rpx;
  border: 8rpx solid #ffffff;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .header-nav {
    padding-top: 30rpx;
    padding-bottom: 15rpx;
  }
  
  .back-btn {
    left: 20rpx;
    top: 30rpx;
  }
  
  .scroll-container {
    height: calc(100vh - 180rpx);
    margin-top: 180rpx;
  }
  
  .content-container {
    padding: 15rpx 20rpx 30rpx 20rpx;
  }
  
  .trip-item {
    width: 600rpx;
    padding: 25rpx;
    gap: 25rpx;
  }
  
  .trip-scenery {
    width: 200rpx;
    height: 150rpx;
  }
} 