/* 页面样式 */
.page {
  min-height: 100vh;
  background: #FFFFFF;
  position: relative;
}

/* 标题区域 */
.header {
  padding: 20rpx 30rpx;
  position: relative;
}

.header-content {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

/* 地图包装容器样式 */
.map-wrapper {
  margin: 0; /* 移除左右边距，让地图占满整个宽度 */
  height: 100%;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid #e9ecef;
}

/* 地图容器 */
.map-container {
  position: relative;
  margin: 0; /* 确保地图容器没有边距 */
  height: 35vh; /* 增加地图高度 */
  min-height: 300rpx; /* 减少最小高度确保其他内容有空间 */
  flex-shrink: 0; /* 防止地图被压缩 */
  width: 100%; /* 确保地图占满整个宽度 */
}

.map {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
}

/* 返回按钮样式调整 */
.back-btn {
  position: absolute;
  left: 30rpx;
  top: 60rpx;
  width: 60rpx;
  height: 60rpx;
  background: transparent; /* 透明背景 */
  border-radius: 0; /* 移除圆角 */
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: none; /* 移除阴影 */
  cursor: pointer;
  transition: all 0.3s ease;
  z-index: 100;
  margin-top: 35rpx;
}

.back-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 1);
}

.back-arrow {
  font-size: 70rpx;
  color: #000; /* 改成纯黑色 */
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
}

/* ===== 状态1: 初始加载状态 ===== */
.loading-state {
  margin: 30rpx;
}

.loading-container {
  height: 800rpx;
  background: white;
  border-radius: 30rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
  text-align: center;
}

.loading-header {
  display: flex;
  align-items: center;
  justify-content: flex-start; /* 改为左对齐 */
  margin-bottom: 20rpx; /* 减少底部间距 */
  padding-left: 20rpx; /* 添加左边距 */
}

.loading-header .ai-avatar {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}

.loading-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.loading-dots {
  display: flex;
  justify-content: flex-start; /* 左对齐 */
  gap: 8rpx; /* 减少点之间的间距，更像聊天界面的样式 */
  margin-bottom: 30rpx;
  padding-left: 20rpx; /* 与AI图标左对齐 */
  margin-top: 40rpx; /* 增加与AI文字之间的间距 */
}

.loading-dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background: #333; /* 改成黑色 */
  animation: loadingPulse 1.4s ease-in-out infinite;
}

.loading-dot:nth-child(2) {
  animation-delay: 0.3s;
}

.loading-dot:nth-child(3) {
  animation-delay: 0.6s;
}

@keyframes loadingPulse {
  0%, 100% { 
    transform: scale(1);
    opacity: 0.4;
  }
  50% { 
    transform: scale(1.2);
    opacity: 1;
  }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* ===== 状态2: 问题选择状态 ===== */
.question-selection-state {
}

.question-container {
 height: 1000rpx;
  background: white;
  border-radius: 35rpx; /* 增加圆角，让卡片更圆润 */
  margin: 40rpx 0rpx 0rpx 0rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.question-header {
  display: flex;
  align-items: center;
  padding-top: 40rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #F5F5F5;
}

.ai-avatar {
  width: 56rpx;
  height: 56rpx;
  margin-right: 18rpx;
  border-radius: 50%;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.question-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}

.question-list {
  margin-bottom: 25rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.question-item {
  display: inline-flex;
  align-items: center;
  padding: 25rpx 15rpx;
  margin: 20rpx 0;
  border-radius: 32rpx;
  /* border: 1rpx solid #E5E5E5; */
  transition: all 0.3s ease;
  background: #FAFAFA;
  cursor: pointer;
  width: fit-content;
  max-width: 100%;
}

.question-item:last-child {
  margin-bottom: 0;
}

.question-item:active {
  transform: scale(0.98);
  background: #F0F0F0;
}

.question-item.selected {
  background: #FFEE07;
  box-shadow: 0 2rpx 8rpx rgba(255, 228, 181, 0.3);
  padding-right: 75rpx;
}

.question-item.selected .question-text {
  color: #000000;
  font-weight: 700;
}

.question-item.selected .question-desc {
  color: #666666;
}

.question-item.selected .arrow {
  color: #666666;
}

.question-content {
  display: flex;
  align-items: center;
  gap: 15rpx;
  white-space: nowrap;
}

.question-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
}

.question-desc {
  font-size: 24rpx;
  color: #666666;
  line-height: 1.4;
}

.arrow {
  font-size: 26rpx;
  color: #999999;
  margin-left: 10rpx;
}

/* 底部按钮区域 */
.bottom-buttons {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0;
  border-top: 2rpx solid #F5F5F5;
  margin-top: 15rpx;
padding-top: 15rpx;
}

.confirm-btn-wrapper {
  flex: 0 0 auto;
  margin-top: 36rpx;
}

.confirm-btn-wrapper .btn {
  width: 200rpx;
  padding: 8rpx 10rpx ;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
  cursor: pointer;
  transition: all 0.3s ease;
}

.btn.confirm {
  background: #333333;
  color: white;
  border-radius: 25rpx;
  padding: 25rpx 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  transition: all 0.3s ease;
  width: 40%;
}

.btn.confirm::before {
  content: '✓';
  display: inline-block;
  width: 32rpx;
  height: 32rpx;
  background: #FFD700;
  border-radius: 50%;
  color: white;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
}

.btn.confirm:active {
  background: #FFC107;
  transform: scale(0.98);
}

.change-batch-btn {
  flex: 1;
  text-align: right;
  padding: 20rpx;
}

.btn-text {
  font-size: 26rpx;
  color: #666;
  text-decoration: underline;
}

/* 换一批按钮样式 */
.btn.change-batch {
  background: #FFEE0745; /* 默认状态：淡黄色带透明度 */
  color: #333;
  border: none;
  border-radius: 50rpx; /* 圆角pill形状 */
  padding: 8rpx 10rpx; /* 左右内边距保持一致，让内容居中 */
  display: flex;
  align-items: center;
  gap: 12rpx; /* 图标和文字之间的间距 */
  font-size: 28rpx;
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(255, 238, 7, 0.2);
  transition: all 0.3s ease;
  margin-right: 0%;
}

.btn.change-batch:active {
  transform: scale(0.98);
  background: #FFE600;
}

/* 选择问题后的按钮样式 */
.btn.change-batch.has-selection {
  background: #FFEE07; /* 选择后：更亮的黄色 */
  box-shadow: 0 2rpx 8rpx rgba(255, 238, 135, 0.3);
}

.refresh-icon {
  width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.change-batch-text {
  color: #333;
  font-weight: 500;
}

.confirm-btn-container {
  margin-bottom: 30rpx;
}

.btn {
  width: 100%;
  padding: 25rpx;
  border-radius: 25rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
  cursor: pointer;
  transition: all 0.3s ease;
}

/* ===== 状态3: 问题确认状态 ===== */
.confirm-state {
  margin: 30rpx;
}

.confirm-container {
  background: white;
  border-radius: 30rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

.confirm-header {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.confirm-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.selected-questions {
  margin-bottom: 40rpx;
}

.selected-question-item {
  background: #FFF3CD;
  padding: 25rpx;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
  border-left: 8rpx solid #FFD700;
}

.selected-question-text {
  font-size: 26rpx;
  color: #333;
  line-height: 1.5;
}

.confirm-buttons {
  display: flex;
  gap: 20rpx;
}

.confirm-buttons .btn {
  flex: 1;
}

.btn.cancel {
  background: #F8F9FA;
  color: #666;
  border: 2rpx solid #E0E0E0;
}

.btn.cancel:active {
  background: #E9ECEF;
  transform: scale(0.98);
}

/* ===== 状态4: AI思考状态 ===== */
.thinking-state {
  margin: 30rpx;
}

.thinking-container {
    height: 800rpx;
  background: white;
  border-radius: 30rpx;
  padding: 30rpx;
 margin-top: 30rpx;
}

.thinking-header {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.thinking-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.thinking-problems {
  margin-bottom: 30rpx;
  text-align: right; /* 问题按钮右对齐 */
}

.thinking-problem-item {
  display: inline-flex;
  align-items: center;
  padding: 20rpx 25rpx;
  margin-bottom: 15rpx;
  border-radius: 25rpx; /* 左上右上角圆角 */
  background: #FFEE07;
  border: 1rpx solid #FFE4B5;
  box-shadow: 0 2rpx 8rpx rgba(255, 228, 181, 0.3);
  width: fit-content;
  max-width: 100%;
  padding-right: 50rpx;
  margin-left: auto; /* 让按钮靠右 */
  margin-right: 0; /* 移除右边距，让按钮完全贴到容器右边缘 */
}

.thinking-problem-text {
  font-size: 20rpx;
  font-weight: 600;
  color: #818181;
  line-height: 1.4;
}

.thinking-loading {
  text-align: right; /* 改为右对齐 */
  margin-bottom: 30rpx;
}

.thinking-dots {
  display: flex;
  justify-content: flex-end; /* 右对齐 */
  gap: 8rpx; /* 减少点之间的间距，与状态一一样 */
  padding-right: 20rpx; /* 与右边对齐 */
  margin-top: 20rpx; /* 减少与AI文字之间的间距 */
}

.thinking-dot {
  width: 8rpx; /* 与状态一一样的大小 */
  height: 8rpx;
  border-radius: 50%;
  background: #333; /* 改成黑色，与状态一一样 */
  animation: loadingPulse 1.4s ease-in-out infinite; /* 使用状态一的动画 */
}

.thinking-dot:nth-child(2) {
  animation-delay: 0.3s; /* 与状态一一样的延迟 */
}

.thinking-dot:nth-child(3) {
  animation-delay: 0.6s; /* 与状态一一样的延迟 */
}

.thinking-instruction {
  background: #F8F9FA;
  padding: 25rpx;
  border-radius: 20rpx; /* 左上右上角圆角 */
  margin-bottom: 30rpx;
  font-size: 22rpx;
  color: #9f9f9f;
  line-height: 1.6;
  text-align: left; /* 左对齐 */
}

.thinking-buttons {
  display: flex;
  gap: 15rpx; /* 减少间隙，让按钮更接近 */
  justify-content: space-between;
  width: 100%; /* 确保按钮容器占满宽度 */
}

.thinking-buttons .btn {
  flex: 1;
  padding: 25rpx 20rpx; /* 增加上下内边距 */
  border-radius: 25rpx ; /* 左上右上角圆角 */
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  cursor: pointer;
  transition: all 0.3s ease;
  min-height: 80rpx; /* 确保按钮有足够的高度 */
}

.btn.confirm-update {
  background: #333;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}

.check-icon {
  width: 28rpx;
  height: 28rpx;
  background: #FFEE07;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #333;
  font-size: 18rpx;
  font-weight: bold;
}

.btn.return-btn {
  background: white;
  color: #666;
  border: 2rpx solid #E0E0E0;
}
