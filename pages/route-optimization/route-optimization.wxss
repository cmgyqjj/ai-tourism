/* 页面样式 */
.page {
    background-color: #f5f5f5;
    padding: 16rpx;
    position: relative;
    min-height: 100vh;
  }
  
  /* 标题区域 */
  .header {
    background-color: #ffffff;
    padding: 16rpx;
    border-radius: 8rpx;
  }
  
  .title {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
  }
  
  /* 地图展示区域 */
  .map-container {
    margin-top: 16rpx;
    background-color: #f5f5f5;
    padding: 20rpx;
    border-radius: 8rpx;
  }
  
  .map {
    width: 100%;
    height: 500rpx;
  }
  
  /* AI 思考中的状态 */
  .ai-thinking-container {
    text-align: center;
    margin-top: 40rpx;
  }
  
  .ai-avatar {
    background-color: #FFD700;
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    margin: 0 auto;
  }
  
  .thinking-text {
    margin-top: 12rpx;
    font-size: 28rpx;
    color: #333;
  }
  
  /* 问题选择区域容器 - 移除弹窗样式 */
  .overlay {
    margin-top: 32rpx;
    padding: 0 16rpx;
    padding-bottom: 120rpx; /* 为底部按钮留出空间 */
  }
  
  /* 问题选择区域 */
  .question-selection {
    background-color: #ffffff;
    padding: 32rpx;
    border-radius: 16rpx;
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  }
  
  /* 标题区域：问题选择标题和AI头像的容器 */
  .question-title-container {
    display: flex;
    align-items: center;
    margin-bottom: 32rpx;
  }
  
  /* AI头像样式 */
  .ai-avatar {
    width: 48rpx;
    height: 48rpx;
    border-radius: 50%;
    margin-right: 16rpx;
    background-color: #FFD700;
  }
  
  /* 问题标题样式 */
  .question-title {
    font-size: 32rpx;
    color: #333;
    font-weight: 500;
    flex: 1;
  }
  
  /* 问题列表 */
  .question-list {
    display: flex;
    flex-direction: column;
    gap: 16rpx;
  }
  
  /* 每个问题项 */
  .question-item {
    display: flex;
    flex-direction: column;
    padding: 24rpx;
    background-color: #f8f8f8;
    border-radius: 12rpx;
    position: relative;
    cursor: pointer;
    transition: background-color 0.2s;
  }
  
  /* 选中问题时背景变色 */
  .question-item.selected {
    background-color: #FFD700; /* 黄色背景表示选中 */
  }

  /* 选中状态下的文本样式 */
  .question-item.selected .question-text {
    color: #333;
    font-weight: bold;
  }

  .question-item.selected .question-desc {
    color: #666;
  }

  .question-item.selected .arrow {
    color: #333;
  }
  
  /* 鼠标悬停时的效果 */
  .question-item:hover {
    background-color: #f0f0f0;
  }
  
  /* 问题标题文本 */
  .question-text {
    font-size: 28rpx;
    color: #333;
    font-weight: 500;
    margin-bottom: 8rpx;
  }
  
  /* 问题描述文本 */
  .question-desc {
    font-size: 24rpx;
    color: #999;
  }
  
  /* 箭头 */
  .arrow {
    position: absolute;
    right: 24rpx;
    top: 50%;
    transform: translateY(-50%);
    font-size: 32rpx;
    color: #999;
  }
  
  /* 确认按钮 */
  .confirm-btn-container {
    margin-top: 40rpx;
    text-align: center;
  }
  
  .confirm {
    background-color: #FFD700;
    color: rgb(17, 16, 16);
    padding: 12rpx 24rpx;
    font-size: 28rpx;
    border-radius: 20rpx;
    border: none;
    cursor: pointer;
    box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
    position: absolute;
  }
  
  /* 都不是，换一批 按钮 */
  .change-batch-btn {
    position: fixed;
    bottom: 70rpx;
    right: 40rpx;
    background-color: #FFD700;
    border-radius:20rpx;
    padding: 16rpx 32rpx;
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
    z-index: 100;
  }
  
  .btn-text {
    font-size: 28rpx;
    color: #333;
    font-weight: 500;
  }
  