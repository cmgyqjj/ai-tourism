/* 分享选项样式 */
.share-options {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 25rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  gap: 20rpx;
}

.share-option {
  display: flex;
  flex-direction: column;
  align-items: center;
  cursor: pointer;
  transition: transform 0.2s ease;
  flex: 1;
}

.share-option:active {
  transform: scale(0.95);
}

.share-icon-wrapper {
  width: 100rpx;
  height: 100rpx;
  border-radius: 18rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 12rpx;
  transition: all 0.3s ease;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
}

.share-icon-wrapper:active {
  background: #e9ecef;
  transform: scale(0.95);
}

.share-option-icon {
  width: 50rpx;
  height: 50rpx;
}

.share-option-text {
  font-size: 26rpx;
  color: #333;
  text-align: center;
  font-weight: 500;
}

.share-modal-footer {
  padding: 15rpx 30rpx 25rpx;
}

.cancel-share-btn {
  width: 100%;
  height: 80rpx;
  background: #f5f5f5;
  color: #666;
  border: none;
  border-radius: 40rpx;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}