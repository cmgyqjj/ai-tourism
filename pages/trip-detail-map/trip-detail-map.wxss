/* trip-detail-map.wxss */
.trip-detail-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
}
.trip-content-container {
  display: flex;
  flex-direction: column;
  background: white;
  border-radius: 16rpx 16rpx 0 0;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.1);
  margin: 0 32rpx;
  margin-top: -16rpx;
  position: relative;
  z-index: 10;
  padding: 24rpx;
  min-height: calc(100vh - 35vh);
  max-height: calc(100vh - 30vh); /* 限制最大高度确保滚动 */
}

/* 行程信息容器 */
.trip-info-container {
  background: #ffffff;
  border-radius: 8rpx;
  padding: 20rpx;
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid #f0f0f0;
}
/* 顶部退出按钮 */
.back-btn {
  position: absolute;
  left: 30rpx;
  top: 60rpx;
  width: 60rpx;
  height: 60rpx;
  background: transparent; /* 透明背景 */
  border-radius: 0; /* 移除圆角 */
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: none; /* 移除阴影 */
  cursor: pointer;
  transition: all 0.3s ease;
  z-index: 100;
  margin-top: 35rpx;
}

.back-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 1);
}

.back-arrow {
  font-size: 70rpx;
  color: #000; /* 改成纯黑色 */
}

/* 行程标题区域 */
.trip-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 0;
  background: transparent;
  border-radius: 0;
  box-shadow: none;
  margin: 0 0 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  padding-bottom: 24rpx;
}

.trip-title {
  flex: 1;
}

.title-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.trip-duration {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.duration-text {
  font-size: 24rpx;
  color: #666;
}

.arrow {
  font-size: 20rpx;
  color: #999;
}

.participants {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.participant-avatar {
  position: relative;
  width: 60rpx;
  height: 60rpx;
}

.avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 2rpx solid #fff;
}

.checkmark {
  position: absolute;
  bottom: -2rpx;
  right: -2rpx;
  width: 20rpx;
  height: 20rpx;
  background: #07c160;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 12rpx;
  color: white;
}

.more-participants {
  width: 60rpx;
  height: 60rpx;
  background: #f0f0f0;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid #fff;
}

.more-text {
  font-size: 20rpx;
  color: #666;
}

/* 主要内容区域 */
