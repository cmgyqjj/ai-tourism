/* 行程PK页面样式 */
.strategy-pk-container {
    width: 100%;
    height: 100vh;
    background-color: #f5f5f5;
    display: flex;
    flex-direction: column;
  }
  
  
  /* 导航栏 */
  .nav-bar {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 62rpx 32rpx 24rpx;
    background-color: #fff;
    position: relative;
    z-index: 100;
    margin-top: 38rpx;
  }
  
  .nav-left {
    position: absolute;
    left: 32rpx;
    width: 48rpx;
    height: 48rpx;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .back-icon {
    display: inline-block;
    font-size: 70rpx;
    line-height: 32rpx;
    color: #000;
  }
  
  .nav-title {
    font-size: 36rpx;
    font-weight: 600;
    color: #333;
    text-align: center;
  }
  
  /* 标签页导航 */
  .tab-nav {
    display: flex;
    background-color: #fff;
    padding: 0 32rpx;
    border-bottom: 1rpx solid #f0f0f0;
  }
  
  .tab-item {
    flex: 1;
    text-align: center;
    padding: 32rpx 0;
    position: relative;
    color: #666;
    font-size: 32rpx;
  }
  
  .tab-item.active {
    color: #333;
    font-weight: 600;
  }
  
  .tab-underline {
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 60rpx;
    height: 6rpx;
    background-color: #FFD700;
    border-radius: 3rpx;
  }
  
  /* 内容区域 */
  .content-area {
    flex: 1;
    padding: 0 0 160rpx 0;
    background-color: #fff;
  }
  
  .basic-info-content {
    padding: 10rpx;
    background-color: #fff;
  }
  
  /* 通用section样式 */
  .section {
    margin-bottom: 48rpx;
    background-color: #fff;
    border-radius: 16rpx;
    overflow: hidden;
  }
  
  
  /* 预算价格section收起时的间距调整 */
